		<li class="{{prefix}}item  {{mod}}">
			<a class="{{prefix}}link  {{mod}}" href="#" data-filter="{{filter.polygraphy}}">Полиграфия</a>
		</li>
		<li class="{{prefix}}item  {{mod}}">
			<a class="{{prefix}}link  {{mod}}" href="#" data-filter="{{filter.style}}">Фирменные стили</a>
		</li>
		<li class="{{prefix}}item  is--right  {{mod}}  dropdown">
			<a class="{{prefix}}link  {{mod}}" href="#" data-toggle="dropdown">Год создания</a>
			<ul class="{{prefix}}dropdown-menu  dropdown-menu">
				<li class="{{prefix}}dropdown-item  {{mod}}">
					<a class="{{prefix}}dropdown-link  {{mod}}" href="#" data-filter="{{filter.2019}}">2019</a>
				</li>
				<li class="{{prefix}}dropdown-item  {{mod}}">
					<a class="{{prefix}}dropdown-link  {{mod}}" href="#" data-filter="{{filter.2018}}">2018</a>
				</li>
				<li class="{{prefix}}dropdown-item  {{mod}}">
					<a class="{{prefix}}dropdown-link  {{mod}}" href="#" data-filter="{{filter.2017}}">2017</a>
				</li>
				<li class="{{prefix}}dropdown-item  {{mod}}">
					<a class="{{prefix}}dropdown-link  {{mod}}" href="#" data-filter="{{filter.2016}}">2016</a>
				</li>
				<li class="{{prefix}}dropdown-item  {{mod}}">
					<a class="{{prefix}}dropdown-link  {{mod}}" href="#" data-filter="{{filter.2015}}">2015</a>
				</li>
			</ul>
		</li>
	</ul>
</div>
{% endif %}

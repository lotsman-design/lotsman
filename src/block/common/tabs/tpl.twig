{% if tabs == "about" %} 
<div class="{{prefix}}panel  {{mod}}">
	<ul class="{{prefix}}nav  {{mod}}">
		<li class="{{prefix}}item  {{mod}} active">
			<a class="{{prefix}}link  {{mod}}" href="#{{tabs}}-personal" data-toggle="tab">Личные данные</a>
		</li>
		<li class="{{prefix}}item  {{mod}}">
			<a class="{{prefix}}link  {{mod}}" href="#{{tabs}}-edu" data-toggle="tab">Образование</a>
		</li>
		<li class="{{prefix}}item  {{mod}}">
			<a class="{{prefix}}link  {{mod}}" href="#{{tabs}}-experience" data-toggle="tab">Опыт работы</a>
		</li>
	</ul>
</div>
<div class="{{prefix}}pane  active" id="{{tabs}}-personal">
	<div class="content-block__grid-row  grid__row  {{mod}}-personal"> 
		<div class="grid__cols"> 
			{% include "../../common/card/card.twig" with {view:"personal", prefix:"card-item__", mod:"is--about-personal", list: [{"heading":info.cakeday, "icon":"icon-cakeday"},{"heading":info.family, "icon":"icon-family"},{"heading":info.car, "icon":"icon-car"}]} %}
		</div>
		<div class="grid__cols">
			{% include "../../common/card/card.twig" with {view:"personal", prefix:"card-item__", mod:"is--about-personal  is--lg", list: [{"heading":info.quality, "note":info.quality_text}]} %}
		</div>
	</div>
</div>
<div class="{{prefix}}pane" id="{{tabs}}-edu">
	{% include "../../common/card/card.twig" with {view:"edu", prefix:"card-item__", mod:"is--about-edu", list: [{"heading":info.edu.dpo.year, "note":info.edu.dpo.heading},{"heading":info.edu.vpo.year, "note":info.edu.vpo.heading},{"heading":info.edu.vpo2.year, "note":info.edu.vpo2.heading}] } %}
</div>
<div class="{{prefix}}pane" id="{{tabs}}-experience"> 
	{% include "../../common/card/card.twig" with {view:"experience", prefix:"card-item__", mod:"is--about-experience", list: [{"preview":info.experience.ic.logo, "heading":info.experience.ic.heading, "date":info.experience.ic.date, "post":info.experience.ic.post},{"preview":info.experience.dd.logo, "heading":info.experience.dd.heading, "date":info.experience.dd.date, "post":info.experience.dd.post},{"preview":info.experience.rusmed.logo, "heading":info.experience.rusmed.heading, "date":info.experience.rusmed.date, "post":info.experience.rusmed.post}] } %} 
</div>
{% endif %}

{% if tabs == "portfolio" %}
